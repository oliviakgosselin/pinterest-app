{
    "rulesDirectory": ["node_modules/codelyzer"],
    "extends": ["tslint-eslint-rules", "rxjs-tslint-rules"],
    "rules": {
        "arrow-return-shorthand": true,
        "callable-types": true,
        "class-name": true,
        "comment-format": [true, "check-space"],
        "component-class-suffix": [true, "Component", "View"],
        "component-selector": [true, "element", "tst", "kebab-case"],
        "curly": true,
        "cyclomatic-complexity": [true, 12],
        "deprecation": {
            "severity": "warn"
        },
        "directive-class-suffix": [true, "Directive"],
        "directive-selector": [true, "attribute", "ce", "camelCase"],
        "eofline": true,
        "forin": true,
        "import-blacklist": [true, "rxjs/Rx"],
        "interface-name": [true, "never-prefix"],
        "interface-over-type-literal": true,
        "label-position": true,
        "linebreak-style": [true, "LF"],
        "max-classes-per-file": [true, 1],
        "max-line-length": false,
        "member-access": [true, "no-public"],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor",
                    "instance-method",
                    "static-method"
                ]
            }
        ],
        "new-parens": true,
        "no-arg": true,
        "no-attribute-parameter-decorator": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-console": true,
        "no-constant-condition": true,
        "no-construct": true,
        "no-debugger": true,
        "no-disabled-tests": true,
        "no-duplicate-case": true,
        "no-duplicate-super": true,
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-empty-character-class": true,
        "no-empty-interface": true,
        "no-ex-assign": true,
        "no-extra-boolean-cast": true,
        "no-eval": true,
        "no-focused-tests": true,
        "no-for-in-array": true,
        "no-inferrable-types": true,
        "no-inner-declarations": true,
        "no-internal-module": true,
        "no-invalid-regexp": true,
        "no-invalid-template-strings": true,
        "no-irregular-whitespace": true,
        "no-misused-new": true,
        "no-namespace": true,
        "no-non-null-assertion": true,
        "no-output-rename": true,
        "no-reference": true,
        "no-regex-spaces": true,
        "no-sparse-arrays": true,
        "no-shadowed-variable": true,
        "no-string-literal": false,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-initializer": true,
        "no-unused-expression": true,
        "no-unsafe-finally": true,
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "no-var-requires": true,
        "object-literal-sort-keys": false,
        "only-arrow-functions": [true, "allow-named-functions"],
        "prefer-const": true,
        "prefer-for-of": true,
        "prefer-object-spread": true,
        "radix": true,
        "rxjs-no-unsafe-takeuntil": true,
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "typedef": true,
        "unified-signatures": true,
        "use-host-property-decorator": true,
        "use-input-property-decorator": true,
        "use-isnan": true,
        "use-life-cycle-interface": true,
        "use-output-property-decorator": true,
        "use-pipe-transform-interface": true,
        "valid-typeof": true,
        "variable-name": [true, "check-format", "allow-leading-underscore"]
    }
}
